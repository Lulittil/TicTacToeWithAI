<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="TicTacToe" Height="450" Width="800">
    <Grid Background="White">
        <Label Content="Tic Tac Toe" HorizontalAlignment="Center" Margin="0,111,0,0" VerticalAlignment="Top" FontSize="72" FontWeight="Bold"/>
        <Button Content="Tap to start" Margin="250,222,250,154" FontSize="22" Click="Button_Click" Background="#FFD2CEEB" FontWeight="Bold"/>

    </Grid>
</Window>
